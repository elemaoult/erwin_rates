<div class='main-container'>
 <style>
        body { background-color: #30303d; color: #fff; }
          .chartdiv {
            width: 50%;
            height: 500px;
        }
      </style>
    <div class='chartdiv'>
        <%= javascript_pack_tag 'amcharts', 'data-turbolinks-track': 'reload' %>
    </div>

  <div class='background-div top-info'>

    <div class='background-div main-description'>
      <h1  style="margin-bottom: 40px">Because I worth it</h1>
      <a class="btn btn-gradient btn-blue" href="#">Want to find out ?</a>
    </div>

    <div class='background-div main-image'>
      <img src="https://cdn8.openculture.com/2019/05/01214221/schrodinger-e1556772151207.png" />
      <div>

        <div class="background-technology">
        </div>


        <div class="background-expertise">
        </div>


        <div class="background-location">
        
        </div>

      </div>
    </div>

  </div>

  <div class='background-div middle-info'>
  
    <div class='background-div results-area'>

      <div class='background-div numeric-results'>
        <div class='background-div nb-freelancers'>
          <p>Number of freelancers</p>
          <p>35 047</p>
        </div>

        <div class='background-div avg-day-rate'>
          <p>Average Day Rate</p>
          <p>653â‚¬</p>
        </div>
        
        <div class='background-div avg-seniority'>
          <p>Average Seniority</p>
          <p>4 years</p>
        </div>
      </div>

      <div class='background-div buttons-area'>

        <div class='background-div'>
          <a class="btn btn-gradient btn-green" href="#">Export</a>
        </div>

        <div class='background-div'>
          <a class="btn btn-gradient btn-yellow" href="#">Seems Right?</a>
        </div>
      </div>
    </div>

    <div class='background-div filter-area'>
      <p>Placeholder for filter-area</p>
      <div class='background-div filter-area'>
        <div class='background-div filter-element'>
          <h2>Placeholder for filter-area</h2>
          <%= form_tag filter_path do %>
            <div class="col mb-3">
              <%= select_tag("Expertises", options_for_select(Expertise.pluck(:name)), include_blank: true,
              class: "form-control") %>
            </div>

            <div class="col mb-3">
              <%= select_tag("Technologies", options_for_select(Technology.pluck(:name)), include_blank: true,
              class: "form-control") %>
            </div>

            <div class="col mb-3">
              <%= select_tag("Seniority", options_for_select(Freelancer.pluck(:experience).uniq), include_blank: true,
              class: "form-control") %>
            </div>

            <div class="col mb-3">
              <%= text_field_tag :location,
                  params[:location],
            class: "form-control ui-autocomplete-input",
            placeholder: "Where?",
            class: "btn btn-success" %>
            </div>

          <%= submit_tag "become someone now!", class: "btn btn-success" %>
          <% end %>


        </div>
    </div>
 </div>
</div> 