<div class="container">
  <div class="row py-4">
      <h1>Résumé</h1>
        <p><strong>Confirmation du don pour <strong><%= @donation.amount %>€ ?</strong></p>
        <button id="OUI" class="btn btn-primary">OUI</button>
      <script src="https://js.stripe.com/v3/"></script>
      <script>
        const paymentButton = document.getElementById('OUI');
        paymentButton.addEventListener('click', () => {
          const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
          stripe.redirectToCheckout({
            sessionId: '<%= @donation.checkout_session_id %>'
          });
        });
      </script>
  </div>
</div>